{% extends 'base.html.twig' %}

{% block body %}

    <form class="form-signin" method='post' action='{{path('login_check')}}'>
        {% if error %}
            <div class='red'>{{ error.message }}</div><br>
        {% endif %}
        <label for="inputEmail" class="sr-only">Email</label>
        <input type="text" id="inputEmail" name='_email' class="form-control" placeholder="Email" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" name="_password" class="form-control" placeholder="Password" required>
        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me" required checked>Stay logged in.
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
    </form>

{% endblock %}