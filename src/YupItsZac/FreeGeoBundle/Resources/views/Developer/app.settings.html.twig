{% extends 'base.html.twig' %}

{% block body %}

<div class="row mbot">

    {% if notifySuccess is not empty %}
        <div class="alert alert-success"> <span class="glyphicon glyphicon-ok"></span> {{ notifySuccess }}</div>
    {% endif %}

    <div class="content col-md-8 col-md-offset-2">

        <div class="row">
            <div class="col-md-6">
                <p class="hiText">Application Settings</p>
            </div>

            <div class="col-md-6">
                <a href="{{ url('free_geo_developer_app_delete', {'appHash': appHash}) }}" class="btn btn-primary btn-danger pull-right"><span class="glyphicon glyphicon-remove"></span> Delete</a> <a class="btn btn-primary pull-right spaceRight" href="{{ url('free_geo_developer_app_keyset_refresh', {'appHash': appHash}) }}"><span class="glyphicon glyphicon-refresh"></span> Refresh Keys</a> <a class="btn btn-primary pull-right spaceRight" href="{{ url('free_geo_developer_dashboard') }}"><span class="glyphicon glyphicon-chevron-left"></span> Back</a>
            </div>
        </div>


        <hr/>

        <div class="row">

            <div class="col-md-6">
                {{ form(form) }}
            </div>

            <div class="col-md-6">

                    <h2>Private Key</h2>

                    {{ privateKey }}

                    <h2>Public Key</h2>

                    {{ publicKey }}

            </div>

        </div>

    </div>


{% endblock %}
